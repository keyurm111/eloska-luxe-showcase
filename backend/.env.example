PORT=5004
NODE_ENV=development
FRONTEND_URL=http://localhost:8084

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/eloska-admin

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
